#include<iostream>
#include<string>

using namespace std;

int char_count(string s, char a);

int main()
{
    string s = "Abracadabra alakazam";
    char a = 'a';
    int count = 0;  // Number of times character a appears in string s
    
    count = char_count(s, a);    // Call function to find characters in string
    cout << "There are " << count << " " << a << "'s in your entry." << endl;    // Print result

    return 0;
}


int char_count(string s, char a)
{
    /**
        Function will count the number of times char a appears in string s and return the result.

        @param s String to be tested
        @param a Character to be counted
        @return number of times character appears in string
    */

    int count = 0;
    int length = s.length();

    for(int i = 0; i <= length; i++)
    {
        if( s.at(i) == a )
        count++;
    }

    return count;
}
